{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JLA Cash Planner",
  "version": "0.1.0",
  "identifier": "com.jla.cashplanner",
  "build": {
    "beforeDevCommand": "bash -c 'cd /Users/jossic/Dev/jla-cash-planner/apps/desktop/frontend && npm run dev'",
    "beforeBuildCommand": "bash -c 'cd /Users/jossic/Dev/jla-cash-planner/apps/desktop/frontend && npm run build'", 
    "devUrl": "http://localhost:1420",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main application",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:webview:allow-webview-close",
            "core:webview:allow-webview-position",
            "core:webview:allow-webview-size",
            "core:app:allow-version",
            "core:app:allow-name",
            "fs:allow-read-file",
            "fs:default"
          ]
        }
      ]
    },
    "windows": [
      { 
        "label": "main",
        "title": "JLA Cash Planner", 
        "width": 1200, 
        "height": 800,
        "resizable": true,
        "dragDropEnabled": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "icon": [
      "icons/icon.png"
    ]
  },
  "plugins": {}
}
